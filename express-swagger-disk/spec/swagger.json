{
  "swagger": "2.0",
  "info": {
    "title": "Petstore",
    "version": "1.0.0",
    "description": "An example API for a pet store."
  },
  "host": "localhost:3333",
  "basePath": "/api/v1",
  "schemes": [
    "http"
  ],
  "consumes": [
    "application/json"
  ],
  "produces": [
    "application/json"
  ],
  "paths": {
    "/pets": {
      "get": {
        "description": "Retrieve a list of pets.",
        "operationId": "Pet:Index",
        "parameters": [
          {
            "name": "limit",
            "in": "query",
            "description": "Number of results to retrieve.",
            "required": false,
            "type": "integer",
            "format": "int32"
          },
          {
            "name": "offset",
            "in": "query",
            "description": "Offset the results by this number.",
            "required": false,
            "type": "integer",
            "format": "int32"
          }
        ],
        "responses": {
          "200": {
            "description": "Pets found.",
            "schema": {
              "type": "array",
              "items": {
                "$ref": "#/definitions/pet"
              }
            }
          },
          "default": {
            "description": "Unexpected error.",
            "schema": {
              "$ref": "#/definitions/error"
            }
          }
        }
      },
      "post": {
        "description": "Create a new pet. Duplicates are allowed.",
        "operationId": "Pet:Create",
        "parameters": [
          {
            "name": "pet",
            "in": "body",
            "description": "Pet to be created.",
            "required": true,
            "schema": {
              "$ref": "#/definitions/newPet"
            }
          }
        ],
        "responses": {
          "201": {
            "description": "Pet created.",
            "schema": {
              "$ref": "#/definitions/pet"
            }
          },
          "default": {
            "description": "Unexpected error.",
            "schema": {
              "$ref": "#/definitions/error"
            }
          }
        }
      }
    },
    "/pets/:id": {
      "get": {
        "description": "Retrieves a pet by ID.",
        "operationId": "Pet:Find",
        "parameters": [
          {
            "name": "id",
            "in": "path",
            "description": "ID of the pet to be retrieved.",
            "required": true,
            "type": "integer",
            "format": "int64"
          }
        ],
        "responses": {
          "200": {
            "description": "Pet found.",
            "schema": {
              "$ref": "#/definitions/pet"
            }
          },
          "404": {
            "description": "Pet not found."
          },
          "default": {
            "description": "Unexpected error.",
            "schema": {
              "$ref": "#/definitions/error"
            }
          }
        }
      },
      "patch": {
        "description": "Update a pet.",
        "operationId": "Pet:Update",
        "parameters": [
          {
            "name": "id",
            "in": "path",
            "description": "ID of the pet to be updated.",
            "required": true,
            "type": "integer",
            "format": "int64"
          },
          {
            "name": "pet",
            "in": "body",
            "description": "Pet properties to be updated.",
            "required": true,
            "schema": {
              "$ref": "#/definitions/pet"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "Pet updated.",
            "schema": {
              "$ref": "#/definitions/pet"
            }
          },
          "default": {
            "description": "Unexpected error.",
            "schema": {
              "$ref": "#/definitions/error"
            }
          }
        }
      },
      "delete": {
        "description": "Delete a pet.",
        "operationId": "Pet:Delete",
        "parameters": [
          {
            "name": "id",
            "in": "path",
            "description": "ID of the pet to be deleted.",
            "required": true,
            "type": "integer",
            "format": "int64"
          }
        ],
        "responses": {
          "204": {
            "description": "Pet deleted."
          },
          "default": {
            "description": "Unexpected error.",
            "schema": {
              "$ref": "#/definitions/error"
            }
          }
        }
      }
    }
  },
  "definitions": {
    "pet": {
      "allOf": [
        {
          "$ref": "newPet"
        },
        {
          "properties": {
            "id": {
              "type": "integer",
              "format": "int64"
            }
          },
          "required": [
            "id"
          ]
        }
      ]
    },
    "newPet": {
      "properties": {
        "name": {
          "type": "string"
        },
        "age": {
          "type": "integer",
          "format": "int32"
        }
      },
      "required": [
        "name"
      ]
    },
    "error": {
      "properties": {
        "code": {
          "type": "integer",
          "format": "int32"
        },
        "message": {
          "type": "string"
        }
      },
      "required": [
        "code",
        "message"
      ]
    }
  }
}
